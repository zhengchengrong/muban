<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        >
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_gray_color" >
        <TextView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1.0dip"
            android:layout_marginLeft="1.0dip"
            android:layout_marginTop="1.0dip"
            android:layout_weight="1.0"
            android:background="#ffffffff"
            android:gravity="center"
            android:padding="6.0dip"
            android:text="经度:"
            />
        <TextView
            android:id="@+id/delivercompanyname"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1.0dip"
            android:layout_marginLeft="1.0dip"
            android:layout_marginTop="1.0dip"
            android:layout_weight="2.0"
            android:text="内容1"
            android:background="#ffffffff"
            android:gravity="center"
            />
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_gray_color" >
        <TextView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1.0dip"
            android:layout_marginLeft="1.0dip"
            android:layout_marginTop="1.0dip"
            android:layout_weight="1.0"
            android:background="#ffffffff"
            android:gravity="center"
            android:padding="6.0dip"
            android:text="纬度:"
            />
        <TextView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1.0dip"
            android:layout_marginLeft="1.0dip"
            android:layout_marginTop="1.0dip"
            android:layout_weight="2.0"
            android:text="内容2"
            android:background="#ffffffff"
            android:gravity="center"
            />
    </TableRow>
    </TableLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        >
    <RelativeLayout
        android:id="@+id/rl_working"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_green_color"
        >
        <TextView
            android:id="@+id/tv_flag01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="上班签到"
            android:layout_marginTop="@dimen/dp_30"
            android:textColor="@color/white"
            style="@style/my_midlle_textview"
            />
        <TextView
            android:id="@+id/tv_sigin_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:30"
            android:textColor="@color/white"
            style="@style/my_midlle_textview"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_flag01"
            />
    </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        >
        <RelativeLayout
            android:id="@+id/rl_worked"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_blue01_color"
            >
    <TextView
        android:id="@+id/tv_flag02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="下班签退"
        android:layout_marginTop="@dimen/dp_30"
        android:textColor="@color/white"
        style="@style/my_midlle_textview"
        />
        <TextView
            android:id="@+id/tv_sigin_time02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:30"
            android:textColor="@color/white"
            style="@style/my_midlle_textview"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_flag02"
            />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
</LinearLayout>